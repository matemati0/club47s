# Security
# Generate a long random value (e.g. 32+ bytes). Required in production.
AUTH_COOKIE_SECRET=""

# Product storage provider: auto | postgres | sqlite
PRODUCTS_DB_PROVIDER="auto"

# Managed Postgres (preferred in production)
# If empty and PRODUCTS_DB_PROVIDER=auto, the app falls back to SQLite.
PRODUCTS_DATABASE_URL=""
PRODUCTS_DB_SSL="require"
PRODUCTS_DB_SSL_REJECT_UNAUTHORIZED="true"
PRODUCTS_DB_MAX_CONNECTIONS="10"

# Local SQLite fallback
# Use an absolute path or a project-relative path.
PRODUCTS_DB_PATH="data/products.db"

# 2FA debug/testing
ALLOW_DEBUG_2FA="false"
DISABLE_EMAIL_DELIVERY="false"

# Resend (email provider)
RESEND_API_KEY=""
RESEND_FROM_EMAIL=""

# Social OAuth (Google)
# Optional for local fallback mode; required in production for real social login.
GOOGLE_OAUTH_CLIENT_ID=""
GOOGLE_OAUTH_CLIENT_SECRET=""
ALLOW_MOCK_SOCIAL_LOGIN="false"

# Public base URL used to build OAuth callback URLs (e.g. https://club47s.com)
OAUTH_BASE_URL=""

# Public business details (shown in legal pages/footer)
NEXT_PUBLIC_BUSINESS_NAME=""
NEXT_PUBLIC_BUSINESS_PHONE=""
NEXT_PUBLIC_BUSINESS_EMAIL=""
NEXT_PUBLIC_BUSINESS_ADDRESS=""
NEXT_PUBLIC_BUSINESS_ID=""
NEXT_PUBLIC_RETURNS_POLICY=""
